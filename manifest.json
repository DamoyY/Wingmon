{
  "manifest_version": 3,
  "name": "LLM 侧边栏聊天",
  "version": "1.0.0",
  "description": "在 Chrome 侧边栏与 LLM 对话。",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "LLM 侧边栏"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "sandbox": {
    "pages": [
      "public/sandbox.html"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:* http://127.0.0.1:*; object-src 'self';",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-eval';"
  },
  "side_panel": {
    "default_path": "public/panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/messaging/listener.js",
        "src/content/handlers/index.js",
        "src/content/handlers/getPageContent.js",
        "src/content/handlers/clickButton.js",
        "src/content/dom/index.js",
        "src/content/dom/buttonIds.js",
        "src/content/dom/viewportMarker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
